function ordenado()
{
  local size=$1
  echo $size
  shuf -i0-5000000 -n $size|sort -n
}

function reverso()
{
  local size=$1
  echo $size
  shuf -i0-5000000 -n $size|sort -n -r
}

function aleatorio()
{
  local size=$1
  echo $size
  shuf -i0-5000000 -n $size
}

for((i=8;i<=20;i++)); do
  tam=$((1<<i))
  k=$(printf "%02d" $i)
  ordenado $tam > $k-ordenado &
  reverso $tam > $k-reverso &
  aleatorio $tam > $k-aleatorio &
done
wait
